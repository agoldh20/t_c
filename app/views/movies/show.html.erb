<h2><%= @movie.title %></h2>
<h3>Rating: <%= @movie.rating %></h3>
<h3>Runtime: <%= @movie.runtime.to_s %></h3>
<h3>Showtimes:</h3>
<ul>
<% @movie.showtimes.each do |showtime| %>
    <% showtime.each do |time, capacity| %>
    <li><%= time %> has <%= capacity %> seats available</li>
    <% end %>
<% end %>
</ul>